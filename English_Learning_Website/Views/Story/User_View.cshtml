@model PagedList.IPagedList<English_Learning_Website.Models.Story>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "User_View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Learn Vocabulary</h2>
<div class="input-group">
    <input type="text" id="search-story" class="form-control pull-right" placeholder="Type keyword ..." />
    <span class="input-group-addon">
        <i class="glyphicon glyphicon-search "></i>
    </span>
</div>
<hr />
<div class="a2">
    @foreach (var item in Model)
    {
        <div class="column" style="border-radius:0;">
            <div class="card search-list">
                <img src="~/Content/images/@item.Story_image" alt="Story Image" style="width:100%;height:250px;position:relative;" />
                <h1 style="text-align:center;font-family:cursive;" class="myhover">@item.Story_Name</h1>
                <p style="color:gray;">@item.Story_View view</p>
                <p style="padding:10px;width:100%;background-color:#333333;color:white;font-size:14px;"><a href="/Story/DetailS/@item.Story_Code" style="color:white;text-decoration:none;">Read</a></p>
            </div>
        </div>
    }
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    $(document).ready(function () {
        function Check(name1, name2) {
            if (name1.indexOf(name2) != -1) {
                return true;
            }
        }
        $("#search-story").keyup(function () {
            var searchResult = $("#search-story").val();
            $(".search-list").each(function () {
                if (Check($(this).text().toLowerCase(), searchResult.toLowerCase())) {
                    $(this).show();
                }
                else {
                    $(this).hide();
                }
            });
        });
    });
</script>
<div>
    <div>
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    </div>
    <div>
        @Html.PagedListPager(Model, page => Url.Action("User_View", new { page = page }))
    </div>
</div>


