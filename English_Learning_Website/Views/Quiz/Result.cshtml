
@{
    ViewBag.Title = "Result";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center;">Your score : </h2>
<h3 style="text-align:center;">@Session["Image_Quiz_Score"]</h3>
<hr />
<h2 style="text-align:center;">Your answer : </h2>
@{ 
    List<bool> vs = Session["Image_Quiz_Result"] as List<bool>;
    List<int> a = new List<int>();
    for (int i = 1; i < 6; i ++)
    {
        a.Add(i);
    }
}
<table class="table-hover table table-responsive tr">
    <tr>
        <th>Number</th>
        <th>True / False</th>
    </tr>
    @foreach (var item in vs)
    {
        foreach (var number in a)
        {
            <tr>
                <td>@number</td>
                @if (item == true)
                {
                    <td style="color:green;">V</td>
                }
                else
                {
                    <td style="color:red">X</td>
                }
            </tr>
            a.Remove(number);
            break;
        }

    }
</table>
<div>
    @Html.ActionLink("Back","Choose_Image_Quiz","Quiz", new {@class ="btn btn-default"})
</div>

