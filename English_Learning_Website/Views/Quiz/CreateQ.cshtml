@model English_Learning_Website.Models.Quiz
@{
    ViewBag.Title = "CreateQ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .text-danger {
        color: red;
    }
</style>
<h2>CreateQ</h2>
<hr />
@using (Html.BeginForm("CreateQ", "Quiz", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="form-group">
    <p>
        <strong>Quiz Name : </strong> @Html.ValidationMessageFor(model => model.Quiz_Name, "", new { @class = "text-danger" })
        @Html.EditorFor(model => model.Quiz_Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Type quiz name ...", @maxlength = "50" } })
    </p>
    <p>
        <strong>Quiz Content : </strong> @Html.ValidationMessageFor(model => model.Quiz_Content, "", new { @class = "text-danger" })
        @Html.EditorFor(model => model.Quiz_Content, new { htmlAttributes = new { @class = "form-control", @placeholder = "Type file  path of quiz content  ...", @maxlength = "50" } })
    </p>
    <p>
        <strong>Quiz Answer One : </strong> @Html.ValidationMessageFor(model => model.Quiz_AnswerOne, "", new { @class = "text-danger" })
        @Html.EditorFor(model => model.Quiz_AnswerOne, new { htmlAttributes = new { @class = "form-control", @placeholder = "Type quiz answer one ...", @maxlength = "50" } })
    </p>
    <p>
        <strong>Quiz Answer Two: </strong> @Html.ValidationMessageFor(model => model.Quiz_AnswerTwo, "", new { @class = "text-danger" })
        @Html.EditorFor(model => model.Quiz_AnswerTwo, new { htmlAttributes = new { @class = "form-control", @placeholder = "Type quiz answer two ...", @maxlength = "50" } })
    </p>
    <p>
        <strong>Quiz Answer Three : </strong> @Html.ValidationMessageFor(model => model.Quiz_AnswerThree, "", new { @class = "text-danger" })
        @Html.EditorFor(model => model.Quiz_AnswerThree, new { htmlAttributes = new { @class = "form-control", @placeholder = "Type quiz answer three ...", @maxlength = "50" } })
    </p>
    <p>
        <strong>Quiz Answer Four : </strong> @Html.ValidationMessageFor(model => model.Quiz_AnswerFour, "", new { @class = "text-danger" })
        @Html.EditorFor(model => model.Quiz_AnswerFour, new { htmlAttributes = new { @class = "form-control", @placeholder = "Type quiz answer four ...", @maxlength = "50" } })
    </p>
    <p>
        <strong>Quiz Answer Five : </strong> @Html.ValidationMessageFor(model => model.Quiz_AnswerFive, "", new { @class = "text-danger" })
        @Html.EditorFor(model => model.Quiz_AnswerFive, new { htmlAttributes = new { @class = "form-control", @placeholder = "Type quiz answer one ...", @maxlength = "50" } })
    </p>
</div>
    <input type="submit" value="Save" name="CreateQ" class="btn btn-success" />
}
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
