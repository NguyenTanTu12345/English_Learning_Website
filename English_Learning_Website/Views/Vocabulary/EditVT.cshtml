@model English_Learning_Website.Models.Vocabulary_TypeBonus
@{
    ViewBag.Title = "EditVT";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>EditVT</h2>
@using (Html.BeginForm("EditVT", "Vocabulary", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="mydiv center-block">
    @Html.EditorFor(model => model.Vocabulary_Type_Code, "", new { htmlAttributes = new { @class = "form-control center-block a", @placeholder = "Type vocabulary category code ...", @style = "width:100%;max-width:100%;display:none;"} })
    <p><strong>Category name : </strong><font style="color:red;"> @ViewData["existed"]</font> @Html.ValidationMessageFor(model => model.Vocabulary_Type_EN_Name, "", new { @class = "text-danger" })</p>
    @Html.EditorFor(model => model.Vocabulary_Type_EN_Name, "", new { htmlAttributes = new { @class = "form-control center-block a", @placeholder = "Type vocabulary category name ...", @style = "width:100%;max-width:100%;", @autofocus = "1" } })

    <br />
    <p>
        <input type="submit" name="EditVT" value="Save" class="btn btn-signup" style="width: 100%; max-width: 100%; border-radius: 16px;" />
    </p>
    <br />
    <p>@Html.ActionLink("Back", "ListVocabularyType", "Vocabulary", new { @class = "btn btn-default center-block", @style = "width:100%;max-width:100%;border-radius:16px;" })</p>
</div>

}
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>






