@model IEnumerable<English_Learning_Website.Models.Test>
@{
    ViewBag.Title = "Choose Test";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Choose Test</h2>
<div class="mydiv center-block">
    @using English_Learning_Website.Models;
    @{
        List<Test_Detail> test_Details = Session["test_Details"] as List<Test_Detail>;
        int user_Code = int.Parse(Session["User_Code"].ToString());
    }
    @foreach (var item in Model)
    {
        <div style="padding:16px;background-color:black;width:100%;max-width:100%;border-radius:16px;">
            <a href="/Test/Do_Test/@item.Test_Code" style="color: white; text-decoration: none; text-align: center;">@item.Test_Name</a>
            @foreach (var item1 in test_Details)
            {
                if (item1.Test_Code == item.Test_Code && item1.User_Code == user_Code)
                {
                    <p class="pull-right" style="color:white;">@item1.Test_Score</p>
                    break;
                }
            }
        </div>
        <br />
    }
</div>

