@model English_Learning_Website.Models.Test
@{
    ViewBag.Title = "CreateT";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .text-danger {
        color: red;
    }
</style>
<h2>CreateT</h2>
@using (Html.BeginForm("CreateT", "Test", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <p><strong>Test Name : </strong> @Html.ValidationMessageFor(model => model.Test_Name, "", new { @class = "text-danger" })</p>
            @Html.EditorFor(model => model.Test_Name, "", new { htmlAttributes = new { @class = "form-control", @placeholder = "Type test name ...", @maxlength = "50" } })
            <br />
            <p><strong>Test Video : </strong> @Html.ValidationMessageFor(model => model.Test_Video, "", new { @class = "text-danger" })</p>
            @Html.EditorFor(model => model.Test_Video, new { htmlAttributes = new { @class = "form-control", @placeholder = "Type file path of test video ...", @maxlength = "50" } })
            <br />
            <p><strong>Test Paragraph : </strong> @Html.ValidationMessageFor(model => model.Test_Paragraph, "", new { @class = "text-danger" })</p>
            @Html.EditorFor(model => model.Test_Paragraph, new { htmlAttributes = new { @class = "form-control", @placeholder = "Type file path of test paragraph ...", @maxlength = "50" } })
            <br />
            <br />
            <p>
                <input type="submit" name="CreateT" value="Save" class="btn btn-success" />
            </p>
}
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>


