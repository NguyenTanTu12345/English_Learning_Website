@model English_Learning_Website.Models.UserzBonus
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Style.css" rel="stylesheet" />
    <title>Sign Up</title>
</head>
<body>
    @using (Html.BeginForm("SignUp", "Login", FormMethod.Post))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="mydiv center-block">
            <p><strong>@Html.LabelFor(model => model.User_FullName)</strong> @Html.ValidationMessageFor(model => model.User_FullName, "", new { @class = "text-danger" })</p>
            <div class="input-group">
                @Html.EditorFor(model => model.User_FullName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Type your full name  ...", @autofocus = "1",@maxlength = "35" } })
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
            </div>
            <br />
            <p><strong>@Html.LabelFor(model => model.User_Mail)</strong><font style="color:red;"> @ViewData["UserExisted"]</font> @Html.ValidationMessageFor(model => model.User_Mail, "", new { @class = "text-danger" })</p>
            <div class="input-group">
                @Html.EditorFor(model => model.User_Mail, new { htmlAttributes = new { @class = "form-control", @placeholder = "Type your gmail ...", @maxlength = "30" } })
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-envelope"></i>
                </span>
            </div>
            <br />
            <p><strong>@Html.LabelFor(model => model.User_Password)</strong> @Html.ValidationMessageFor(model => model.User_Password, "", new { @class = "text-danger" })</p>
            <div class="input-group">
                @Html.EditorFor(model => model.User_Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Type your password ...", @maxlength = "10" } })
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-lock "></i>
                </span>
            </div>
            <br />
            <p><strong>@Html.LabelFor(model => model.Check_Password)</strong><font style="color:red;"> @ViewData["WrongPassword"]</font> @Html.ValidationMessageFor(model => model.Check_Password, "", new { @class = "text-danger" })</p>
            <div class="input-group">
                @Html.EditorFor(model => model.Check_Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Type your password ...", @maxlength = "10" } })
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-check "></i>
                </span>
            </div>
            <br />
                <input type="checkbox" onclick="myfunction()"/> Show Password
            <br />
            <br />
            <input type="submit" name="SignUp" value="Sign Up" class="btn btn-signup" style="width:100%;max-width:100%;" />
            <br />
            <br />
            <p>@Html.ActionLink("Back", "SignIn", "Login", new { @class = "btn btn-default center-block" })</p>
        </div>
    }
    <script>
        function myfunction() {
            var x = document.getElementById("Check_Password");
            var y = document.getElementById("User_Password");
            if (x.type == "password" && y.type == "password") {
                x.type = "text";
                y.type = "text";
            }
            else {
                x.type = "password";
                y.type = "password";
            }
        }
    </script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>
</html>
