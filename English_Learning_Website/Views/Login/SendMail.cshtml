@model English_Learning_Website.Models.UserzBonus
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Style.css" rel="stylesheet" />
    <link href="~/Content/StyleSheet.css" rel="stylesheet" />
    <title>Send Mail</title>
</head>
<body>
    @using (Html.BeginForm("SendMail", "Login", FormMethod.Post))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="parralax" style="height: 805.3px; color: aqua">
            <div class="mydiv pull-right" style="margin-top: 15%;">
                <p><strong>@Html.LabelFor(model => model.User_Mail)</strong><font style="color:red;"> @ViewData["MailNotFound"]</font> @Html.ValidationMessageFor(model => model.User_Mail, "", new { @class = "text-danger" })</p>
                <div class="input-group">
                    @Html.EditorFor(model => model.User_Mail, new { htmlAttributes = new { @class = "form-control", @placeholder = "Type your gmail ...", @autofocus = "1", @maxlength = "30" } })
                    <span class="input-group-addon">
                        <i class="glyphicon glyphicon-user "></i>
                    </span>
                </div>
                <br />
                <input type="submit" name="SendMail" value="Send verification code" class="btn btn-info" style="width:100%;max-width:100%;" />
                <br />
                <br />
                <p>@Html.ActionLink("Back", "SignIn", "Login", new { @class = "btn btn-default center-block" })</p>
            </div>
        </div>
    }
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    </body>
</html>

