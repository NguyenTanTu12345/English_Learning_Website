@model English_Learning_Website.Models.UserzBonus
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login Page</title>
    <link href="~/Content/Style.css" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm("SignIn", "Login", FormMethod.Post))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="mydiv pull-right">
        <p><strong>@Html.LabelFor(model => model.User_Mail)</strong> @Html.ValidationMessageFor(model => model.User_Mail, "", new { @class = "text-danger" }) <font style="color:red">@ViewData["NotFound"]</font></p>
        <div class="input-group">
            @Html.EditorFor(model => model.User_Mail, new { htmlAttributes = new { @class = "form-control", @placeholder = "Type your gmail ...", @autofocus = "1", @maxlength = "30" } })
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-user "></i>
            </span>
        </div>
        <br />
        <p><strong>@Html.LabelFor(model => model.User_Password)</strong> @Html.ValidationMessageFor(model => model.User_Password, "", new { @class = "text-danger" })</p>
        <div class="input-group">
            @Html.EditorFor(model => model.User_Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Type your password  ...", @maxlength = "10" } })
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-lock "></i>
            </span>
        </div>
        <label class="checkbox-inline" style="padding-top:10px;">@Html.CheckBoxFor(model => model.RememberMe, new { @class = "checkbox-inline" })<strong>@Html.LabelFor(model => model.RememberMe)</strong></label>
        <br />
        <input type="submit" name="SignIn" value="Sign In" class="btn btn-primary" style="width:100%;max-width:100%;" />
        <br />
        <p style="text-align:center;padding-top:10px;">@Html.ActionLink("Forgot password ?", "SendMail", "Login")</p>
        <p>@Html.ActionLink("Sign Up", "SignUp", "Login", new { @class = "btn btn-signup", @style = "width:100%;max-width:100%;" })</p>
    </div>
    }
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>
</html>

